	сткРезультат = Получатель_ЭкранироватьЗначениеСообщения(НЕ булНеЭкранироватьСообщение);
	сткРезультат = Получатель_ЭкранироватьКлючСообщения(НЕ булНеЭкранироватьСообщение);
	сткРезультат = Получатель_ЭкранироватьКлючиЗаголовков(НЕ булНеЭкранироватьСообщение);
	сткРезультат = Получатель_ЭкранироватьЗначенияЗаголовков(НЕ булНеЭкранироватьСообщение);
	
	чНачало = ТекущаяУниверсальнаяДатаВМиллисекундах();
	сткРезультат = Получатель_ПрочитатьСписокСообщенийВПул(чслЧтение, чслТаймаут, ?(ПодпискаТопики_Чтение, 10, 1));
	сткРезультат = Получатель_ПолучитьСообщенияИзПулаJSON(ЧитатьДД);
	Если Не сткРезультат.булУспешно Тогда
		Возврат сткРезультат;
	КонецЕсли;	
		
	чОкончание = ТекущаяУниверсальнаяДатаВМиллисекундах();

	сткРезультат = JSONВСтруктуру(сткРезультат.стрСообщения);
	Если Не сткРезультат.булУспешно Тогда
		Возврат сткРезультат;
	КонецЕсли;	
	
	Если сткРезультат.масДанные.Количество() > 0 Тогда		
		сткРезультатФиксации = Получатель_ЗафиксироватьСмещения();
		Если Не сткРезультатФиксации.булУспешно Тогда
			Возврат сткРезультат;
		КонецЕсли;	
	КонецЕсли;

	
	тзДанные_Чтение.Очистить();	
	тзДанные = Получатель_ПолучитьТаблицуСообщения();
	Для Каждого Элемент Из сткРезультат.масДанные Цикл
		
		стрДобавить = тзДанные.Добавить();
		ЗаполнитьЗначенияСвойств(стрДобавить, Элемент);	
		стрДобавить.headers = Получатель_ПолучитьТаблицуЗаголовки();
		
			ИД = "";   
			Код = "";   
			Наименование = ""; 
			Пометка = ложь;
		
		Для Каждого СтрокаЗаголовок Из Элемент.Headers Цикл
			ЗаполнитьЗначенияСвойств(стрДобавить.headers.Добавить(), СтрокаЗаголовок); 
			Если СтрокаЗаголовок.Key = "ID" Тогда
				 ИД = СтрокаЗаголовок.Value; 
	        ИначеЕсли СтрокаЗаголовок.Key = "name" Тогда
				 Наименование = СтрокаЗаголовок.Value;
		    ИначеЕсли СтрокаЗаголовок.Key = "code" Тогда
				 Код = СтрокаЗаголовок.Value; 
			КонецЕсли;
		КонецЦикла;        
		
		Если код = ""  Тогда
			Чтение = Новый ЧтениеJSON;
			Чтение.УстановитьСтроку(Элемент.value);
			Пока Чтение.Прочитать() Цикл
				 
				Если Чтение.ТипТекущегоЗначения = ТипЗначенияJSON.ИмяСвойства Тогда
					Если Чтение.ТекущееЗначение = "Ref" Тогда
						  Чтение.Прочитать();
						  ИД = Чтение.ТекущееЗначение;  
					КонецЕсли;  
					Если Чтение.ТекущееЗначение = "DeletionMark" Тогда
						  Чтение.Прочитать();  
						  Если Строка(Чтение.ТекущееЗначение) = "true" Тогда
						  	Пометка = истина; 
						  КонецЕсли;
					  КонецЕсли;  
					  Если Чтение.ТекущееЗначение = "Code" Тогда
						  Чтение.Прочитать();
						  Код = Чтение.ТекущееЗначение;  
					  КонецЕсли;
					  Если Чтение.ТекущееЗначение = "Description" Тогда
						  Чтение.Прочитать();
						  Наименование = Чтение.ТекущееЗначение;  
					КонецЕсли;

				КонецЕсли;
			КонецЦикла;
			Чтение.Закрыть();
		КонецЕсли; 
		
		СоздатьНоменклатуру(Наименование, Код, ИД);
		
	КонецЦикла;
	
	тзДанные_Чтение.Загрузить( тзДанные);
	
	ОбновитьСмещенияРазделов();
КонецФункции  

Процедура  СоздатьНоменклатуру(Наименование, Код, ИД)
	номссылка = Справочники.Номенклатура.ПолучитьСсылку(Новый УникальныйИдентификатор(ИД));
	Если НЕ ЗначениеЗаполнено(номссылка) или номссылка.ПолучитьОбъект() = неопределено Тогда
		ном = Справочники.Номенклатура.СоздатьЭлемент();
		ном.ОбменДанными.Загрузка = истина;  
		ном.УстановитьСсылкуНового(номссылка);
	Иначе
		ном = номссылка.ПолучитьОбъект();
	КонецЕсли;
	
	ном.ИдЕРП = ИД;
	ном.Наименование = Наименование;
	ном.Код = Код;
	Ном.Записать();
	
	
