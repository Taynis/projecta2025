Функция ПодобратьДокумент(ИдДокумента, ТипДокумента)
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ
		|	ДокументЕРП.Ссылка КАК Ссылка
		|ИЗ
		|	Документ.ДокументЕРП КАК ДокументЕРП
		|ГДЕ
		|	ДокументЕРП.ИдЕРП = &ИдЕРП
		|	И ДокументЕРП.ТипДокумента = &ТипДокумента";
	
	Запрос.УстановитьПараметр("ИдЕРП", ИдДокумента);
	Запрос.УстановитьПараметр("ТипДокумента", ТипДокумента);
	
	РезультатЗапроса = Запрос.Выполнить();
	
	ВыборкаДетальныеЗаписи = РезультатЗапроса.Выбрать();
	
	Пока ВыборкаДетальныеЗаписи.Следующий() Цикл
		Возврат ВыборкаДетальныеЗаписи.Ссылка.ПолучитьОбъект();
	КонецЦикла;
	
	Возврат неопределено;

	
КонецФункции

Функция ЕстьМарка(Док, Марка)
  	
	Запрос = Новый Запрос;
	Запрос.Текст = 
		"ВЫБРАТЬ
		|	ДокументЕРПНВД_ШтрихкодыУпаковок.ШтрихкодУпаковки КАК ШтрихкодУпаковки
		|ИЗ
		|	Документ.ДокументЕРП.НВД_ШтрихкодыУпаковок КАК ДокументЕРПНВД_ШтрихкодыУпаковок
		|		ЛЕВОЕ СОЕДИНЕНИЕ Справочник.ШтрихкодыУпаковокТоваров КАК ШтрихкодыУпаковокТоваров
		|		ПО ДокументЕРПНВД_ШтрихкодыУпаковок.ШтрихкодУпаковки = ШтрихкодыУпаковокТоваров.Ссылка
		|ГДЕ
		|	ДокументЕРПНВД_ШтрихкодыУпаковок.Ссылка = &Ссылка
		|	И ШтрихкодыУпаковокТоваров.Ссылка = &Марка";
	
	Запрос.УстановитьПараметр("Ссылка", Док);       
	Запрос.УстановитьПараметр("Марка", Марка);

	
	РезультатЗапроса = Запрос.Выполнить();
	
	ВыборкаДетальныеЗаписи = РезультатЗапроса.Выбрать();
	
	Пока ВыборкаДетальныеЗаписи.Следующий() Цикл
		Возврат истина
	КонецЦикла;
	
	Возврат ложь;
	
